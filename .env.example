# ===================================
# LUMI UI MONOREPO ENVIRONMENT VARIABLES
# ===================================
# Copy this file to .env and fill in your values

# ===== DEVELOPMENT SETTINGS =====
NODE_ENV=development
VITE_API_BASE_URL=http://localhost:8000

# ===== CLIENT SETTINGS =====
VITE_APP_TITLE=Lumi UI
VITE_APP_VERSION=1.0.0

# ===== SERVER SETTINGS =====
# These are also defined in apps/server/.env.example
# Include here for convenience when running the full stack
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
SECRET_KEY=your-secret-key-here

# ===== CORS SETTINGS =====
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
